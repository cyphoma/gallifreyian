<%= simple_form_for i18n_key, html: {:"data-remote" => true} do |form| %>
  <fieldset>
    <%= form.input :key %>
    <%= form.association :translations do |translation| %>
      <%- unless translation.object.try(:new_record?) %>
        <%= translation.input :id, as: :hidden %>
      <% end %>
      <%= translation.input :datum, input_html: {rows: 2, cols: 100},
        label: t("gallifreyian.#{translation.object.try(:language)}"),
        as: hidden_unless_select(translation.object.try(:language)) %>
    <% end %>
    <%= form.button :submit %>
  </fieldset>
<% end %>
